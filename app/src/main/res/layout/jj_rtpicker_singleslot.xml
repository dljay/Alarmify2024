<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardCornerRadius="15dp"
    android:layout_margin="30dp"
    android:layout_marginBottom="50dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/dark_gray_jjong"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <LinearLayout
        android:id="@+id/ll_entireSingleSlot"
        android:background="@drawable/gradient1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:weightSum="10">

            <!-- 전체 Row 클릭으로만 반응하기 위해 아래 RadioButton focusable/clickable = false 로 지정-->
        <RadioButton
            android:id="@+id/rb_singleSlot_selector"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:focusable="false"
            android:clickable="false"
            android:layout_margin="5dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_singleSlot_rtPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RTA TITLE"
            android:layout_margin="5dp"
            android:textSize="20sp"
            android:layout_gravity="center"
            android:focusable="false"
            android:clickable="false"
            android:layout_weight="6"/>

        <ImageView
            android:id="@+id/iv_singleSlot_albumArt"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_margin="5dp"
            android:focusable="false"
            android:clickable="false"

            android:layout_weight="3"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>