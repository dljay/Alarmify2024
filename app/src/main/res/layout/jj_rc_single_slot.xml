<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:vumeter="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/id_singleSlot_ll"
        android:background="@drawable/background_selector_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="5">

        <!--thumbnail/title/description -->
        <RelativeLayout
            android:id="@+id/id_rL_including_title_description"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <!--thumbnail -->
            <FrameLayout
                android:id="@+id/id_frameL_thumbnail"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_margin="4dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/id_ivThumbnail"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:srcCompat="@tools:sample/avatars"/>

                <!--Progress Circle -->
                <ProgressBar
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    style="?android:attr/progressBarStyle"
                    android:id="@+id/id_progressCircle"
                    android:paddingStart="8dp"
                    android:paddingTop="1dp"
                    android:paddingRight="8dp"
                    android:visibility="gone">
                </ProgressBar>


                <!--vuMeter -->
                <io.gresse.hugo.vumeterlibrary.VuMeterView
                    android:layout_width="75dp"
                    android:layout_height="75dp"

                    android:id="@+id/id_vumeter"
                    android:paddingStart="8dp"
                    android:paddingTop="1dp"
                    android:layout_marginTop="20dp"
                    android:paddingRight="8dp"
                    vumeter:vumeter_stopSize="5dp"
                    vumeter:vumeter_speed="10"
                    vumeter:vumeter_blockNumber="3"
                    vumeter:vumeter_blockSpacing="10dp"
                    vumeter:vumeter_backgroundColor="#433F3F"
                    vumeter:vumeter_startOff="false"
                    android:alpha="0.8"
                    android:visibility="gone"/>

            </FrameLayout>


            <!--Title text -->
            <TextView
                android:id="@+id/id_tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:layout_toRightOf="@+id/id_frameL_thumbnail"

                android:text="Flight Annoucement"
                android:textSize="14sp"
                android:textStyle="bold">

            </TextView>

            <!--Description text -->
            <TextView
                android:id="@+id/id_tvTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_tvTitle"
                android:layout_marginStart="8dp"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="2dp"
                android:layout_marginBottom="2dp"
                android:layout_toRightOf="@+id/id_frameL_thumbnail"
                android:text="An Announcement inside"
                android:textSize="12sp"
                android:textStyle="italic">

            </TextView>

        </RelativeLayout>


        <!--Free/GET THIS -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/id_cl_entire_Purchase"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/id_tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="FREE"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/id_ivPurchased_False"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/purchased_false_1"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_tvPrice" />

            <ImageView
                android:id="@+id/id_ivPurchased_True"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/purchased_true_2_rubiks"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_tvPrice" />




        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>