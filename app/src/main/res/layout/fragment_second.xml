<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".jjongadd.SecondFragment">

    <com.sothree.slidinguppanel.SlidingUpPanelLayout
        android:id="@+id/id_slidingUpPanel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        app:umanoOverlay="false"
        app:umanoPanelHeight="60dp"
        app:umanoShadowHeight="0dp">

        <!--1st child - Chips+ 리싸이클뷰임!  -->

        <!--1st child-b) Swipe+RcView!  -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/id_rcV_2ndFrag"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </androidx.recyclerview.widget.RecyclerView>

        <!--2nd child - Slider aka mini player  -->
        <RelativeLayout
            android:id="@+id/ir_rl_entireSlider"
            android:layout_width="match_parent"
            android:layout_height="300dp">

            <include layout="@layout/jj_slide_ui2" />

        </RelativeLayout>


    </com.sothree.slidinguppanel.SlidingUpPanelLayout>


</FrameLayout>