<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="180"
                android:endColor="@color/fourthTextColor"
                android:startColor="@color/fourthTextColor" />

            <corners android:radius="100sp"/>
            <stroke android:width="10dp"
                android:color="@color/jj_main_bg_color"/>

        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="180"
                android:endColor="@color/jj_accentColor_1"
                android:startColor="@color/jj_accentColor_1" />
            <corners android:radius="100sp"/>
            <stroke android:width="10dp"
                android:color="@color/jj_main_bg_color"/>
            <size android:height="3dp"/>

        </shape>
    </item>
</selector>