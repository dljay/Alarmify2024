<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 내가 만든 Action Bar Transparent 테스트 22/2/13 -->

    <!-- 1) DetailsFrag [요일] Chip style  -->
    <style name="customChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>

    </style>

    <!-- 2) [SecondFrag] TAG Chip style: (1) BG 색, Text 색 , Icon 관련 [왜그런지 TextColor 는 아래 rtTagChipTextStyle 에 넣어도 안 먹힘..]-->
    <style name="rtTagChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="android:textColor">@color/secondaryTextColor</item>
        <item name="checkedIconEnabled">false</item>
        <item name="checkedIcon">@null</item>


    </style>

    <!-- [SecondFrag] TAG Chip style: (2) TEXT 관련 -->
    <style name="rtTagChipTextStyle" parent="TextAppearance.MaterialComponents.Chip">

        <item name="fontFamily">@font/circular_std_medium</item>
<!--        <item name="android:textStyle">bold</item>-->
    </style>




    <!-- 내가　만든　BottomSheet Rounded Corner style! (1-a)-->
    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetBackground</item>

        <item name="android:layout_marginStart">2dp</item>
        <item name="android:layout_marginEnd">2dp</item>

    </style>

    <!-- 내가　만든　　BottomSheet Rounded Corner style! (1-b)-->
    <style name="bottomSheetBackground" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_four_corners_btm_sheet</item>
    </style>

    <style name="alarm_list_albumArt_Container">
        <item name="android:layout_width">68dip</item>
        <item name="android:layout_height">68dip</item>
    </style>

    <!-- For the TimePicker from JB 4.2 -->

    <style name="label">
        <item name="android:textSize">@dimen/label_font_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <!--    <item persistedString="android:fontFamily">sans-serif-condensed</item> -->
    </style>

    <style name="dialpad">
        <item name="android:textSize">@dimen/dialpad_font_size</item>
        <item name="android:textAllCaps">true</item>
        <!--    <item persistedString="android:fontFamily">sans-serif-light</item> -->
    </style>

    <style name="dialpad_ampm" parent="dialpad">
        <item name="android:textSize">@dimen/dialpad_font_size_ampm</item>
    </style>

    <style name="tablet_dialpad">
        <item name="android:textSize">@dimen/tablet_dialpad_font_size</item>
        <item name="android:textAllCaps">true</item>
        <!--    <item persistedString="android:fontFamily">sans-serif-condensed</item> -->
    </style>

    <style name="tablet_dialpad_ampm">
        <item name="android:textSize">@dimen/tablet_dialpad_font_size_ampm</item>
        <item name="android:textAllCaps">true</item>
        <!--    <item persistedString="android:fontFamily">sans-serif-condensed</item> -->
    </style>

    <!-- SecondFrag Album Art ImageView 에서 코너 동글뱅이 -->
    <style name="roundedCornersImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <style name="CircleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>



