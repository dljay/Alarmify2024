<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/info_fragment_base_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/id_appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/avocado"
            app:contentScrim="@color/mat_red"
            app:title="Collapsing Toolbar"
            app:expandedTitleMarginStart="64dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <!-- 실제 ToolBar-->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/id_toolbar_Collapsable"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"

                app:titleTextColor="@color/mat_red"
                app:layout_collapseMode="pin">
            </androidx.appcompat.widget.Toolbar>

            <FrameLayout
                android:id="@+id/alarmTimeReminder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/transparent"
                android:elevation="25dp">

                <!-- XX 시간 후 울립니다 뜨는 창-->
                <fragment
                    android:id="@+id/list_activity_info_fragment"
                    android:name="com.theglendales.alarm.presenter.InfoFragment"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:layout_gravity="bottom"
                    android:background="#00000000"
                    tools:layout="@layout/info_fragment"/>
            </FrameLayout>


        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fab_listActivity"
        app:fab_colorNormal="?android:attr/colorActivatedHighlight"
        app:fab_colorPressed="?android:attr/colorActivatedHighlight"
        android:backgroundTint="?android:attr/colorActivatedHighlight"
        android:backgroundTintMode="src_atop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="28dp"
        android:elevation="175dp"
        android:src="@drawable/ic_menu_add" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10"
        tools:context=".presenter.AlarmsListActivity"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:id="@+id/main_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout="@layout/list_fragment"
            android:layout_weight="9"/>



    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/id_bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/mat_dark_grey_purple_overlay_original"
        app:itemTextColor="@color/bottom_nav_color"
        app:itemIconTint="@color/bottom_nav_color"
        android:layout_gravity="bottom"
        app:menu="@menu/bottom_nav_menu"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>