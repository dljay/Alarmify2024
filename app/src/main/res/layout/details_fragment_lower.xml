<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--중요! ListActivity>collapsingToolBarLayout 이 현재 ScrollView 의 Scroll 에 반응해서
    열리거나 Collapse 되지 않도록 nestedScrollingEnabled=false 로 해두었음. 22/2/21-->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:nestedScrollingEnabled="false"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="?android:attr/dividerHorizontal" />

            <!--Repeat(요일선택) 칩으로 >>>>>> -->
            <LinearLayout
                android:id="@+id/details_repeat_chipRow"
                android:layout_width="match_parent"
                android:layout_height="72dip"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/details_repeat_sum_jj"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center|left"
                    android:layout_weight="1"
                    android:layout_marginBottom="2dp"
                    android:text="Repeat"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/_chipGroupDays"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:layout_gravity="center|left"
                    android:layout_marginStart="0dp"
                    android:layout_marginEnd="0dp"
                    app:chipSpacingHorizontal="0dp"
                    app:singleLine="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/_chipSun"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:checked="false"


                        android:text="S"
                        android:textColor="@color/mat_red"
                        style="@style/customChipStyle"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/_chipMon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:checked="false"

                        android:text="M"

                        android:textColor="@color/blackish"
                        style="@style/customChipStyle"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/_chipTue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:checked="false"

                        android:text="T"
                        android:textColor="@color/blackish"
                        style="@style/customChipStyle"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/_chipWed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:checked="false"

                        android:text="W"
                        android:textColor="@color/blackish"
                        style="@style/customChipStyle"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/_chipThu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:checked="false"

                        android:text="T"
                        android:textColor="@color/blackish"
                        style="@style/customChipStyle"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/_chipFri"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:checked="false"

                        android:text="F"
                        android:textColor="@color/blackish"
                        style="@style/customChipStyle"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/_chipSat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checkable="true"
                        android:checked="false"

                        android:layout_marginEnd="3dp"
                        android:text="S"
                        android:textColor="@color/mat_blue"
                        style="@style/customChipStyle"/>




                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>
            <!-- <<<<<< Repeat(요일선택) 칩으로  -->

            <!-- 아래 기존에 있던 요일 summary 는 visibility=gone 으로했음-->
            <LinearLayout
                android:id="@+id/details_repeat_row"
                android:layout_width="match_parent"
                android:layout_height="68dip"
                android:layout_marginTop="12dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView

                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_gravity="center|left"
                    android:layout_weight="1"

                    android:text="@string/alarm_repeat"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <TextView
                    android:id="@+id/details_repeat_summary"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:text="Weekdays" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="?android:attr/dividerHorizontal" />

        <!-- Ringtone 메뉴 ******* -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_RtPicker_Container"
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <!-- A) Ringtone Text + Spinner-->


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginTop="8dp"
                    android:text="@string/alert"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    app:layout_constraintBottom_toTopOf="@+id/id_ll_Wrapping_Spinner"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/music_note_black_24"
                    app:layout_constraintBottom_toTopOf="@+id/id_ll_Wrapping_Spinner"
                    app:layout_constraintStart_toEndOf="@+id/textView3"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginStart="3dp"/>

                <LinearLayout

                    android:id="@+id/id_ll_Wrapping_Spinner"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_gravity="center|left"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/guideline2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView3">

                    <TextView
                        android:id="@+id/tv_RtPicker_DetailsFrag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N/A"
                        android:textAppearance="?android:attr/textAppearanceSmall">
                    </TextView>

                </LinearLayout>

                <!-- B) Vertical GuideLine-->
                <androidx.constraintlayout.widget.Guideline
                    android:id="@+id/guideline2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintGuide_begin="277dp" />

                <!-- C) AlbumArt Big-->
                <LinearLayout
                    android:id="@+id/ll_albumArt_DetailsFrag"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="1"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/guideline2"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/iv_ringtoneArtBig"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"

                        android:src="@drawable/errordisplay">

                    </ImageView>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Ringtone 메뉴 ******* -->

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="3dp"
                android:background="?android:attr/dividerHorizontal" />
            <!--About the Ringtone -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center|left"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/alert_about"/>

                <TextView
                    android:id="@+id/tv_rt_description_detailsFrag"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="N/A"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:layout_marginTop="3dp"
                android:background="?android:attr/dividerHorizontal" />

            <!--Information [TextView] -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_gravity="center|left"
                    android:layout_marginTop="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/alert_information"/>

                <!--[Badges] ImageViews-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/iv_badge1_intense"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/badge_1_intense"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/iv_badge2_gentle"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/badge_2_gentle"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/iv_badge3_nature"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/badge_3_nature"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/iv_badge4_location"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/badge_4_location"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/iv_badge5_popular"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/badge_5_popular"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/iv_badge6_misc"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/badge_6_misc"
                        android:visibility="gone"/>


                </LinearLayout>






            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dip"
        android:layout_marginLeft="16dip"
        android:layout_marginRight="16dip"
        android:background="?android:attr/dividerHorizontal" />

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/details_activity_button_revert"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="true"
            android:text="@android:string/cancel" />

        <Button
            android:id="@+id/details_activity_button_save"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:focusable="true"
            android:text="@android:string/ok" />
    </LinearLayout>

</LinearLayout>