<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:vumeter="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/id_singleSlot_ll"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/background_selector_2"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:weightSum="5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!--thumbnail/title/description -->
        <RelativeLayout
            android:id="@+id/id_rL_including_title_description"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <!--thumbnail -->
            <FrameLayout
                android:id="@+id/id_frameL_thumbnail"
                android:layout_width="63dp"
                android:layout_height="63dp"
                android:layout_marginStart="4dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/id_ivThumbnail"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:padding="3dp"
                    android:scaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:shapeAppearanceOverlay="@style/roundedCornersImageView"
                    tools:srcCompat="@tools:sample/avatars" />

                <!--Progress Circle -->
                <ProgressBar
                    android:id="@+id/id_progressCircle"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="63dp"
                    android:layout_height="63dp"
                    android:paddingStart="8dp"
                    android:paddingTop="1dp"
                    android:paddingRight="8dp"
                    android:visibility="gone">

                </ProgressBar>


                <!--vuMeter -->
                <io.gresse.hugo.vumeterlibrary.VuMeterView
                    android:id="@+id/id_vumeter"
                    android:layout_width="63dp"

                    android:layout_height="63dp"
                    android:layout_marginTop="20dp"
                    android:alpha="0.8"
                    android:paddingStart="8dp"
                    android:paddingTop="1dp"
                    android:paddingRight="8dp"
                    android:visibility="gone"
                    vumeter:vumeter_backgroundColor="#433F3F"
                    vumeter:vumeter_blockNumber="3"
                    vumeter:vumeter_blockSpacing="10dp"
                    vumeter:vumeter_speed="10"
                    vumeter:vumeter_startOff="false"
                    vumeter:vumeter_stopSize="5dp" />

            </FrameLayout>


            <!--Title text -->
            <!-- 아래 textAppearance 는 오직 색 때문에 사용..그냥 color 해도 된다. -->
            <TextView
                android:id="@+id/id_tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@+id/id_frameL_thumbnail"
                android:fontFamily="@font/roundo_regular"
                android:text="Flight Announcement"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="13sp">

            </TextView>

            <!--Description text -->
            <TextView
                android:id="@+id/id_tvTags"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/id_tvTitle"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="2dp"

                android:layout_toRightOf="@+id/id_frameL_thumbnail"
                android:text="#Travel #Flight"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textSize="13sp"
                android:textStyle="italic">

            </TextView>

        </RelativeLayout>


        <!--Free/GET THIS -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/id_cl_entire_Purchase"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1">

            <TextView
                android:id="@+id/id_tvPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="N/A"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/id_ivPurchased_False"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/purchased_false_1"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_tvPrice" />

            <ImageView
                android:id="@+id/id_ivPurchased_True"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:src="@drawable/purchased_true_2_rubiks"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/id_tvPrice" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>